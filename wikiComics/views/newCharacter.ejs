<%- include('partials/header') %>
    <h1>Adicionar novo personagem</h1>
    <form action="/characters/new" method="POST">
        <label>Nome</label>
        <input type="text" name="name" required>

        <label>Descrição completa</label>
        <textarea name="description"></textarea>

        <label>Descrição curta</label>
        <textarea name="shortDescription"></textarea>

        <label>Poderes (separados por vírgula)</label>
        <input type="text" name="poderes" placeholder="Super força, vôo, telepatia">

        <label>Origem</label>
        <input type="text" name="origem">

        <label>Afiliações (separadas por vírgula)</label>
        <input type="text" name="afiliacoes">

        <label>Aparições (separadas por vírgula)</label>
        <input type="text" name="aparicoes">

        <label>URL da Imagem</label>
        <input type="text" name="imageUrl">

        <button type="submit">Salvar</button>
    </form>   
<%- include('partials/footer') %>